<Window x:Class="HTMLtoPDFDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTMLtoPDFDemoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Convert HTML to PDF" HorizontalAlignment="Left" Margin="232,120,0,0" VerticalAlignment="Top" Width="159" Height="56" Click="Button_Click"/>
        <Label Content="Source:" HorizontalAlignment="Left" Margin="97,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSource" HorizontalAlignment="Left" Height="23" Margin="146,44,0,0" TextWrapping="Wrap" Text="C:\temp\input.html" VerticalAlignment="Top" Width="120"/>
        <Label Content="Output:" HorizontalAlignment="Left" Margin="97,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="23" Margin="146,72,0,0" TextWrapping="Wrap" Text="C:\temp\output.pdf" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
